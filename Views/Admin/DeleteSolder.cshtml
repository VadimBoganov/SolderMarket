@model solder.Models.Solder
@{
     ViewBag.Title = "Delete solder";
}
 
<div>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
 
        <dt>Type</dt>
        <dd>
            @Html.DisplayFor(model => model.SolderType.Name)
        </dd>

        <dt>Product</dt>
        <dd>
            @Html.DisplayFor(model => model.SolderProduct.Name)
        </dd>
 
        <dt>Price</dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        @if (@Model.PictureName != null)
        {
            <dt>Image</dt>
            <img style='width:80px; height:60px;' src="~/images/solders/@Model.PictureName" />
        }
    </dl>
 
    <div>
        <form asp-controller="admin" asp-action="DeleteSolder" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Delete" />
            </div>
        </form>
    </div>
</div>