@model IEnumerable<solder.Models.Solder>
@{
    ViewBag.Title = "All solders";
}        
<a asp-action="Create">Add solder</a>
<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td><a asp-action="Details" asp-controller="Admin" asp-route-id="@item.Id">Подробнее</a> | 
                <a asp-action="Edit" asp-controller="Admin" asp-route-id="@item.Id">Изменить</a> | 
                <a asp-action="Delete" asp-controller="Admin" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }    
</table>
