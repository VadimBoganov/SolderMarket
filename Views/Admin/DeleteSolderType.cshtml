@model solder.Models.SolderType
@{
     ViewBag.Title = "Delete Solder Type";
}
<div>
    <p>Внимание! при удлении типа будут так же удалены припои, котороые содержут этот тип</p>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
 
    <div>
        <form asp-controller="admin" asp-action="DeleteSolderType" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Delete" />
            </div>
        </form>
    </div>
</div>